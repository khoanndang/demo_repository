pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // echo 'Building..'
                sh 'docker compose up -d --build'
            }
        }
        stage('Test') {
            steps {
                // echo 'Testing..'
                sh 'cd demo_repository'
                sh 'php artisan test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}