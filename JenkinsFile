pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // echo 'Building..'
                git 'https://github.com/khoanndang/demo_repository.git'
                sh 'docker compose -d --build'
            }
        }
        stage('Test') {
            steps {
                // echo 'Testing..'
                sh 'cd demo_repository'
                sh 'php artisan test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}